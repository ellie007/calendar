<h1>Editing user</h1>

<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |msg| %>
    <div class="alert alert-error">
      <a class="close" data-dismiss="alert">&times;</a>
      <%= msg %>
    </div>
  <% end %>
<% end %>


<%= form_tag(user_url(@user), method: 'patch') do %>


  <div>
    <%= label_tag :first_name  %><br />
    <%= text_field_tag :first_name, @user.first_name  %>
  </div>

  <div>
    <%= label_tag :last_name %><br />
    <%= text_field_tag :last_name, @user.last_name %>
  </div>

  <div>
    <%= label_tag :email %><br />
    <%= text_field_tag :email, @user.email %>
  </div>

  <div>
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>

  <div>
    <%= label_tag :password_confirmation %><br />
    <%= password_field_tag :password_confirmation  %>
  </div>


  <div>
    <%= submit_tag "Update User" %>
  </div>
<% end %>

